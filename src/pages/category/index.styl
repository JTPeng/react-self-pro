.catHeaderContainer
	width 100%
	position fixed
	left 0
	top 0
	z-index 1000
	padding 10px 20px
	box-sizing: border-box
	border-bottom 1px solid #ffffff
	.search
		width 77%
		height 30px
		line-height: 30px
		display flex
		flex-flow row nowrap
		align-items center
		justify-content center
		font-size 18px
		background-color #ededed
		border-radius 8px
		background-image: url('./images/search.png')
		background-position: 60px center
		background-repeat: no-repeat
		background-size: 18px
		padding-left: 80px
.catContent
	width 100%
	height 100%
	padding-top:51px
	display: flex
	.leftNav
		width 30%
		height: 600px
		.navList
			width 100%
			.navItem
				width 100%
				height: 50px
				font-size: 16px
				text-align: center
				line-height: 50px
	.rightContent
		width 70%
		height: 600px

