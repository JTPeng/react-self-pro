					border-bottom 1px solid #eeeeee
				.loginText
					width 100%
					height 50px
					display flex
					justify-content space-between
					align-items center
					span
						font-size 14px
						color #dedede
				.loginSub
					width 100%
					height 50px
					background-color #f00
					color #ffffff
					font-size 16px
					border-radius 5px
			.otherWays
				width 100%
				text-align: center
				font-size: 16px
				color: #000
